<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Navbar and Cards</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: black;
        }
        h1 {
            color: white;
            text-align: center;
        }

        /* Navbar Styling */
        .navbar {
            height: 35px;
            background-color: #333;
            color: white;
            padding: 15px;
            position: relative;
        }

        .navbar ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
        }

        .navbar ul li {
            margin: 0 15px;
        }

        .navbar ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .navbar ul li a:hover {
            text-decoration: underline;
        }

        /* Hamburger Menu Styling */
        .hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .hamburger div {
            width: 25px;
            height: 3px;
            background-color: white;
            margin: 4px 0;
        }

        /* Hide Navbar Menu for Mobile */
        .navbar ul {
            flex-direction: row;
        }

        .navbar ul.show-menu {
            display: flex;
            flex-direction: column;
            position: absolute;
            top: 60px;
            right: 0;
            background-color: #333;
            width: 100%;
        }

        .navbar ul.show-menu li {
            text-align: center;
            margin: 10px 0;
        }

        /* Card container styling */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 20px;
        }

        /* Individual card styling */
        .card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin: 15px;
            padding: 20px;
            transition: 0.3s;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 18px;
            color: #555;
            margin-bottom: 10px;
        }

        .card-description {
            font-size: 16px;
            color: #777;
        }

        /* Media Query for smaller screens */
        @media (max-width: 768px) {
            .hamburger {
                display: flex;
            }

            .navbar ul {
                display: none;
            }

            .navbar ul.show-menu {
                display: flex;
            }
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <h1>CMS SYSTEM</h1>
        <div class="navbar">
            <div class="hamburger" onclick="toggleMenu()">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <ul id="navbar-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/createBlog">Create Blogs</a></li>
            </ul>
        </div>
    </header>

    <!-- Card Section 
     js ko code maa tyo - hunna. card-container ko kuraa see in readme.md-->

     <div class="card-container">
        <% if (blogs.length > 0) { %>
            <% blogs.forEach((blog) => { %>
            <div class="card">
                <div class="card-title"><%- blog.title %></div>
                <div class="card-subtitle"><%- blog.subTitle %></div>
                <div class="card-description"><%- blog.description %></div>
            </div>
            <% }) %>
        <% } else { %>
            <h1>No blogs to show !!!</h1>
        <% } %>
    </div>
    

    <script>
        function toggleMenu() {
            const navbarMenu = document.getElementById('navbar-menu');
            if (navbarMenu.classList.contains('show-menu')) {
                navbarMenu.classList.remove('show-menu');
            } else {
                navbarMenu.classList.add('show-menu');
            }
        }
    </script>

</body>
</html>
